<ul>
  <% @search_results.each do |artist| %>
      <li>
        <p>
          <a href="<%= artist[:lastfm_url] %>" target="_blank">
            <img src="<%= artist[:image] %>" alt=""/><br><%= artist[:name] %>
          </a>
          <br>
        </p>
        <% if controller.current_user.bets.count < 10 %>
            <%= link_to 'Сделать ставку', new_user_bet_path(:artist => artist) %>
        <% end %>
        <hr>
      </li>
  <% end %>
</ul>