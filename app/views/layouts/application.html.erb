<!DOCTYPE html>
<html>
<head>
  <title>Hb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
<% end %>

<% if current_user %>
    <%= link_to 'Мои ставки', :controller => :bets %>
    <%= link_to 'Чарты', :controller => :charts %>

    <%= current_user.name %>

    <%= link_to 'Выйти', :controller => :auth, :action => :logout %>
<% end %>

<%= yield %>

</body>
</html>
