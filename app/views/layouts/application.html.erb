  <style type="text/css">
      .li_active
      {
          background: #000000; color: #fff; border: 0;
          font-weight: bold;
          /*width: 100%;*/
          -webkit-transition: all .2s ease-in-out;
          -moz-transition: all .2s ease-in-out;
          -ms-transition: all .2s ease-in-out;
          -o-transition: all .2s ease-in-out;
          transition: all .2s ease-in-out;
      }
  </style>


</head>
<body>

<div class="twelve columns header_nav_fullwidth">

  <a href="/mybets">
    <img src="/images/logo_black.png" alt="desc" style="border:none; margin:0 15px 7px; width: 90%;" />
  </a>

  <div class="ten columns">

    <% if current_user %>
        <ul id="menu-header" class="nav-bar horizontal">
          <li class="<%= 'li_active' if request.fullpath == '/mybets' %>">
            <%= link_to 'Мои ставки', :controller => :bets %>
          </li>
          <li class="<%= 'li_active' if request.fullpath == '/charts' %>">
            <%= link_to 'Чарты', :controller => :charts %>
          </li>
          <li class="">

          </li>
          <li class="<%= 'li_active' if request.fullpath == '/mybets/new' || request.fullpath ==  '/bets/search' %>">
            <%= link_to 'Сделать ставку!', '/mybets/new', :class => :newbet %>
          </li>
          <li class="">
            <%= link_to 'Выйти', :controller => :auth, :action => :logout %>
          </li>
        </ul>
    <% end %>


    <script type="text/javascript">
        //<![CDATA[
        $('ul#menu-header').nav-bar();
        //]]>
    </script>

  </div>

  <!-- <div class="two columns">
    <p style="margin: 6px 0">
      <a href="#" class="button radius">Sign up!</a> <a href="#" class="button secondary radius">Log in</a>
    </p>
  </div> -->

</div>

<!-- END Header -->

<div style="clear: both"></div>

<!-- page wrap -->
<div class="twelve columns">
  <!-- page wrap -->

  <!--alerts-->
  <div class="row page_wrap" style="margin-top:-2px">
    <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
            <h4 style="text-align: center;">
              <span class="heading_center_bg" style="font-family: Georgia, 'Times New Roman', Times, serif;">
                <%= msg %>
              </span>
            </h4>
        <% end %>
    <% end %>
  </div>

  <%= yield %>

  <div class="twelve columns">
    <ul id="menu3" class="footer_menu horizontal">
      <li class=""><a href="page.php?id=1">Hjem</a></li>
    </ul>
  </div>
  <script type="text/javascript">
      //<![CDATA[
      $('ul#menu3').nav-bar();
      //]]>
  </script>

</div>
<!-- end page wrap) -->

